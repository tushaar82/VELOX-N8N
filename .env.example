# OpenAlgo Configuration
# Get your API key from OpenAlgo server after setup
OPENALGO_API_KEY=your_api_key_here
OPENALGO_HOST=http://localhost:5000
OPENALGO_VERSION=v1

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO

# WebSocket Configuration
MAX_WEBSOCKET_CONNECTIONS=100
TICK_BUFFER_SIZE=1000

# Default Timeframes
# Comma-separated list of default timeframes for multi-timeframe analysis
DEFAULT_TIMEFRAMES=1m,5m,15m,1h,1d

# Docker Configuration
# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=changeme123
N8N_HOST=localhost

# Optional: Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme123

# PostgreSQL Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=n8n

# Timezone
TIMEZONE=Asia/Kolkata

# Optional: Rate Limiting
# RATE_LIMIT_PER_MINUTE=60
